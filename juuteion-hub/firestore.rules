rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 許可する管理者のメールアドレスリスト
    // ※ ここにあなたのメールアドレスを記述してください
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'takagi.buckup@gmail.com' || 
        request.auth.token.email == 'juuteion.events@gmail.com'
      );
    }

    match /events/{eventId} {
      // 読み取りは誰でもOK
      allow read: if true;
      // 書き込み・削除は管理者のみ
      allow write: if isAdmin();
    }
  }
}