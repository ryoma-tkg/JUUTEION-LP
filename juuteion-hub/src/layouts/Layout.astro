---
import "@fontsource/ibm-plex-sans-jp/400.css";
import "@fontsource/ibm-plex-sans-jp/700.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/700.css";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { ClientRouter } from "astro:transitions"; // 追加
// ▼ 修正: fade のインポートは不要になるので削除してもOKですが、残しておいても害はありません

interface Props {
    title: string;
    isFluid?: boolean;
    // ▼ SEO用Props
    description?: string;
    image?: string;
}

const {
    title,
    isFluid = false,
    description = "ケモノ好きが集う、酔いどれケモナークラブイベント獸酊音 公式サイト。",
    image = "/top-bg.jpg", // デフォルトOGP画像
} = Astro.props;

// 絶対パスの生成
const siteUrl = new URL(
    Astro.url.pathname,
    Astro.site || "https://juuteion-hub.web.app",
);
const ogImageUrl = new URL(image, siteUrl);

// ▼▼▼ 追加: 限界まで「待ち」を削るカスタムアニメーション定義 ▼▼▼
const fastFade = {
    old: {
        name: "astroFadeOut",
        duration: "0.2s", // 0.1秒で即座に消去
        easing: "linear",
        fillMode: "forwards",
    },
    new: {
        name: "astroFadeIn",
        duration: "0.2s", // 0.15秒で素早く表示 (これ以上早いと点滅に見える)
        easing: "ease-out",
        fillMode: "backwards",
    },
};

const customTransition = {
    forwards: fastFade,
    backwards: fastFade,
};
---

<!doctype html>
<html lang="ja" class="dark scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <link rel="preload" as="image" href={ogImageUrl} />

        {/* SEO & OGP Meta Tags */}
        <title>{title} | 獸酊音 JUUTEION</title>
        <meta name="description" content={description} />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={siteUrl} />
        <meta property="og:title" content={`${title} | 獸酊音`} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImageUrl} />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={siteUrl} />
        <meta property="twitter:title" content={`${title} | 獸酊音`} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={ogImageUrl} />

        {/* iOSのアドレスバー色指定 */}
        <meta name="theme-color" content="#09090b" />

        <ClientRouter />
    </head>
    <body
        class="bg-background text-text-main antialiased selection:bg-accent-blue selection:text-white"
    >
        {/* Ambient Light */}
        <div class="fixed inset-0 z-0 pointer-events-none opacity-50">
            <div
                class="absolute top-[-20%] left-[-10%] w-[500px] h-[500px] bg-accent-blue/5 rounded-full blur-[120px]"
            >
            </div>
            <div
                class="absolute bottom-[-20%] right-[-10%] w-[500px] h-[500px] bg-accent-red/5 rounded-full blur-[120px]"
            >
            </div>
        </div>

        {/* ▼▼▼ 修正: customTransition を適用 ▼▼▼ */}
        <main
            transition:animate={customTransition}
            class:list={[
                "relative z-10 min-h-screen scrollbar-hide",
                isFluid
                    ? "w-full"
                    : "w-full max-w-[480px] mx-auto bg-black/80 backdrop-blur-2xl border-x border-white/5 shadow-2xl",
            ]}
        >
            <slot />
        </main>
    </body>
</html>

<style is:global>
    ::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
