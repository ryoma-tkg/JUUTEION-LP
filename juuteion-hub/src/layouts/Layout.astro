---
import "@fontsource/ibm-plex-sans-jp/400.css";
import "@fontsource/ibm-plex-sans-jp/700.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/700.css";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { fade } from "astro:transitions";

interface Props {
    title: string;
    isFluid?: boolean;
    // ▼ SEO用Props
    description?: string;
    image?: string;
}

const {
    title,
    isFluid = false,
    description = "獣たちが集う、酔いどれケモナークラブイベント「獸酊音 (Juu-Tei-On)」公式サイト。",
    image = "/top-bg.jpg", // デフォルトOGP画像
} = Astro.props;

// 絶対パスの生成 (デプロイ先のURLに合わせて調整されます)
const siteUrl = new URL(
    Astro.url.pathname,
    Astro.site || "https://juuteion-hub.web.app",
);
const ogImageUrl = new URL(image, siteUrl);
---

<!doctype html>
<html lang="ja" class="dark scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        {/* ▼ SEO & OGP Meta Tags */}
        <title>{title} | 獸酊音 JUUTEION</title>
        <meta name="description" content={description} />

        {/* Facebook / Discord / General */}
        <meta property="og:type" content="website" />
        <meta property="og:url" content={siteUrl} />
        <meta property="og:title" content={`${title} | 獸酊音`} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImageUrl} />

        {/* Twitter */}
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={siteUrl} />
        <meta property="twitter:title" content={`${title} | 獸酊音`} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={ogImageUrl} />

        <ViewTransitions />
    </head>
    <body
        class="bg-background text-text-main antialiased selection:bg-accent-blue selection:text-white"
    >
        {/* Ambient Light */}
        <div class="fixed inset-0 z-0 pointer-events-none opacity-50">
            <div
                class="absolute top-[-20%] left-[-10%] w-[500px] h-[500px] bg-accent-blue/5 rounded-full blur-[120px]"
            >
            </div>
            <div
                class="absolute bottom-[-20%] right-[-10%] w-[500px] h-[500px] bg-accent-red/5 rounded-full blur-[120px]"
            >
            </div>
        </div>

        <main
            class:list={[
                "relative z-10 min-h-screen scrollbar-hide",
                isFluid
                    ? "w-full"
                    : "w-full max-w-[480px] mx-auto bg-black/80 backdrop-blur-2xl border-x border-white/5 shadow-2xl",
            ]}
        >
            <slot />
        </main>
    </body>
</html>

<style is:global>
    ::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
