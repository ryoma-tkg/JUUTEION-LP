---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import logo from "../assets/logo/jto_logo.svg";

// メタデータ設定
const title = "404 Not Found";
const description = "お探しのページは見つかりませんでした。";

// 背景スタイル（ロゴパターン）
const bgStyle = `background-color: #09090b; background-image: url('${logo.src}'); background-size: 30%; background-repeat: no-repeat; background-position: center; opacity: 0.1;`;
---

<Layout title={title} description={description} isFluid={true}>
    <div class="flex flex-col lg:flex-row min-h-screen">
        {/* [LEFT COLUMN] Visual Only (PC) - 静寂なロゴパターン */}
        <aside
            class="hidden lg:block flex-1 h-screen sticky top-0 left-0 overflow-hidden border-r border-subtle min-w-0 bg-black"
        >
            <div class="absolute inset-0" style={bgStyle}></div>
        </aside>

        {/* [RIGHT COLUMN] Content - App View */}
        <main
            class="w-full lg:w-[700px] lg:shrink-0 bg-background relative z-10 border-l border-subtle flex flex-col min-h-screen"
        >
            {/* SP Header */}
            <header
                class="lg:hidden flex justify-center items-center p-4 border-b border-subtle bg-background/80 backdrop-blur-md sticky top-0 z-50 h-16"
            >
                <div
                    class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
                >
                    <img
                        src={logo.src}
                        alt="JUUTEION"
                        class="h-8 w-auto opacity-100 mb-2"
                    />
                </div>
            </header>

            {/* Main Content Area */}
            <div
                class="flex-1 flex flex-col items-center justify-center p-8 text-center space-y-12"
            >
                <div class="space-y-6">
                    {/* Icon / Number */}
                    <div class="relative inline-block">
                        <h1
                            class="text-[120px] leading-none font-bold font-en tracking-tighter text-zinc-800 select-none"
                        >
                            404
                        </h1>
                        <p
                            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-sm font-bold font-en tracking-[0.3em] text-accent-red whitespace-nowrap"
                        >
                            SIGNAL LOST
                        </p>
                    </div>

                    {/* Text */}
                    <div class="space-y-4 max-w-xs mx-auto">
                        <p
                            class="text-lg font-bold text-white font-sans tracking-wide"
                        >
                            ページが見つかりません
                        </p>
                        <p
                            class="text-sm text-text-muted leading-relaxed font-sans"
                        >
                            アクセスしようとしたページは、
                            <br />
                            ノイズの彼方に消えてしまったか
                            <br />
                            削除された可能性があります。
                        </p>
                    </div>
                </div>

                {/* Action */}
                <div class="w-full max-w-[200px]">
                    <Button variant="secondary" href="/">
                        RETURN TO FLOOR
                    </Button>
                </div>
            </div>

            {/* Footer Decoration */}
            <footer
                class="py-8 border-t border-subtle text-center lg:text-left lg:pl-12"
            >
                <p class="text-[10px] text-text-muted/20 font-mono font-en">
                    ERROR CODE: 404_NOT_FOUND
                </p>
            </footer>
        </main>
    </div>
</Layout>
