---
interface Props {
    title: string;
    subTitle: string;
    date: string;
    time: string;
    place: string;
    price: string;
    image: string;
}

const { title, subTitle, date, time, place, price, image } = Astro.props;
---

<div class="w-full relative group cursor-pointer">
    {/* Glow Effect */}
    <div
        class="absolute -inset-0.5 bg-gradient-to-br from-accent-blue via-accent-yellow to-accent-red rounded-[34px] opacity-30 blur-lg group-hover:opacity-60 transition duration-500"
    >
    </div>

    <div
        class="relative w-full bg-surface rounded-[32px] overflow-hidden border border-white/5 shadow-2xl"
    >
        {/* Image Area */}
        <div class="relative h-64 w-full bg-zinc-800 overflow-hidden">
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                style={`background-image: url('${image}')`}
            >
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-t from-surface via-surface/20 to-transparent"
            >
            </div>

            {/* Floating Tag */}
            <div class="absolute top-4 left-4">
                <span
                    class="bg-accent-yellow text-black text-xs font-bold px-3 py-1 rounded-full tracking-widest shadow-lg shadow-accent-yellow/20 font-en"
                >
                    ● NEXT EVENT
                </span>
            </div>
        </div>

        {/* Content Area */}
        <div class="relative p-6 -mt-12 space-y-5">
            <div>
                {
                    /* 混植対応: font-en を指定することで英数字はMontserrat、日本語はIBM Plex Sansになります */
                }
                <h3
                    class="text-3xl font-bold text-white tracking-tighter leading-none mb-3 drop-shadow-md font-en"
                >
                    {title}<br />
                    <span class="text-accent-blue">{subTitle}</span>
                </h3>
                <div
                    class="flex items-center gap-4 text-sm font-medium text-zinc-400 font-en"
                >
                    <span class="flex items-center gap-2">
                        <span class="w-1.5 h-1.5 rounded-full bg-accent-red"
                        ></span>
                        {date}
                    </span>
                    <span class="w-px h-3 bg-white/10"></span>
                    <span>{time}</span>
                    <span class="w-px h-3 bg-white/10"></span>
                    <span>@{place}</span>
                </div>
            </div>

            <div class="h-px w-full bg-white/5"></div>

            {/* Footer / CTA */}
            <div class="flex items-center justify-between pt-1">
                <div>
                    <p
                        class="text-xs text-text-muted uppercase tracking-widest mb-1 font-en"
                    >
                        Entrance
                    </p>
                    <p class="text-xl font-bold text-white font-en">{price}</p>
                </div>
                <div
                    class="w-12 h-12 rounded-full bg-white text-black flex items-center justify-center group-hover:bg-accent-yellow transition-colors duration-300"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                        ></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>
