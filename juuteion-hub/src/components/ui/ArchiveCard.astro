---
interface Props {
    title: string;
    date: string;
    place: string;
    image: string;
}

const { title, date, place, image } = Astro.props;
---

<div class="group cursor-pointer space-y-3">
    <div
        class="relative aspect-[4/3] rounded-2xl overflow-hidden bg-surface border border-subtle"
    >
        <div
            class="absolute inset-0 bg-cover bg-center grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
            style={`background-image: url('${image}')`}
        >
        </div>
        <div
            class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-300"
        >
        </div>
    </div>
    <div class="space-y-1 pl-1">
        {/* font-en で混植対応 */}
        <h4
            class="text-base font-bold text-text-main group-hover:text-text-main transition-colors font-en"
        >
            {title}
        </h4>
        <p class="text-xs text-text-muted flex items-center gap-2 font-en">
            <span>{date}</span>
            <span class="w-px h-2 bg-subtle"></span>
            <span>{place}</span>
        </p>
    </div>
</div>
