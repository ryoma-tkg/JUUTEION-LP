---
interface Props {
    title: string;
    titleClass?: string;
    accentColor?: "blue" | "yellow" | "red" | "subtle" | "muted";
    link?: {
        href: string;
        label: string;
    };
    class?: string;
}

const { title, accentColor = "blue", link, class: className } = Astro.props;

const colorMap = {
    blue: "bg-accent-blue",
    yellow: "bg-accent-yellow",
    red: "bg-accent-red",
    subtle: "bg-subtle",
    muted: "bg-text-muted",
};
---

<div
    class:list={[
        "flex justify-between items-end pb-4 border-b border-subtle",
        className,
    ]}
>
    <div class="flex items-center gap-4">
        <span class:list={["w-2 h-8 rounded-sm", colorMap[accentColor]]}></span>
        <h2
            class="text-2xl font-bold font-en tracking-widest text-white uppercase"
        >
            {title}
        </h2>
    </div>
    {
        link && (
            <a
                href={link.href}
                class="text-xs font-en font-bold text-text-muted hover:text-white transition-colors tracking-widest mb-1"
            >
                {link.label}
            </a>
        )
    }
</div>
